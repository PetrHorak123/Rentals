@model Rentals.Web.Models.UserLoginViewModel
@using Rentals.Web.Localization

@{
	ViewBag.Title = Localization.Login;
	Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<form method="post" class="form-horizontal" asp-action="ExternalLogin" asp-controller="Account">
	@Html.HiddenFor(m => m.ReturnUrl)
	<div>
		<p>
			@if (Model.ExternalLogins != null)
			{
				foreach (var provider in Model.ExternalLogins)
				{
					<button type="submit" class="btn btn-primary btn-lg" name="@Html.NameFor(m => m.Provider)" value="@provider.Name" title="Log in using your @provider.DisplayName account">Přihlášení přes Microsoft Office 365</button>
				}
			}
		</p>
	</div>
</form>